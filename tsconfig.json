{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "strict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "public",
    "lib": [
      "esnext",
      "dom"
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ]
}